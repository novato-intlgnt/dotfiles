[init]
	defaultBranch = main
[user]
	name = {{ .gitUserName }}
	email = {{ .gitUserEmail }}
[core]
	editor = nvim
[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true     # use n and N to move between diff sections
  side-by-side = true

  # delta detects terminal color automatically: set one of these to disable auto-detection
  # dark = true
  # light = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[credential]
	helper = store
  
[alias]
	tree = log --all --decorate --oneline --graph
